// custom classes

.myButton
  border 1px solid #333
  width 280px
  height 70px
  display inline-flex
  align-items center
  padding-left 3rem
  position relative
  transition .4s linear
  &:after
    content: '\203A'
    position absolute
    font-size 2rem
    right 10%
    top 50%
    transform translate(-50%,-50%)
  &:hover
    background-color #000
    color #fff
    cursor pointer