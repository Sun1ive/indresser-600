// custom classes

.myButton
  border 1px solid #333
  width 250px
  height 60px
  display inline-flex
  align-items center
  padding-left 3rem
  position relative
  transition .4s all ease-in-out
  text-decoration none
  text-transform uppercase
  &:after
    content: '\203A'
    position absolute
    font-size 1.6rem
    right 10%
    top 50%
    transform translate(-50%,-50%)
  &:hover
    background-color #000
    color #fff
    cursor pointer

.close
  background-image: url('/static/img/close.svg')
  width 25px
  height 25px
  position absolute
  top 5%
  right 5%
  cursor pointer
  transition: .4s ease
  opacity: .3
  &:hover
    opacity: 1

@media (max-width 600px)
  .myButton
    font-size: 1rem


@media (max-width 420px)
  .myButton
    width 200px
    height 50px
    padding-left: 1rem
    font-size: .9rem
    &:after
      font-size: .9rem
      right: 5%