/** Stylus Styles */

@import '../../node_modules/vuetify/src/stylus/app'
@import './fonts'
@import './custom'
@import './wrapper'
@import './slider'



.footer
  position relative
  z-index: 8

.scroll
  z-index: 5

.fixed
  z-index 6

.inputText
  color #fff

.application--light
  background-color #fff

.application--light .btn:not(.btn--icon):not(.btn--flat)
  background-color: transparent

.application > main
  flex-direction: column

.dialog
  overflow-y: hidden

.toolbar__content
.toolbar__extension
    display flex
    width 80%
    justify-content space-around

.navigation-drawer__border
  width 0

.application--light .navigation-drawer
  display: flex
  align-items: center
  justify-content: center
  box-shadow 3px 3px 3px #c0c0c0
  font-size: 1.2rem
  font-family: Gilroy-Light, Arial, Helvetica, sans-serif
  z-index 10

p
h2
h1
h3
  margin 0


@media (max-width 1450px)
  h2
    font-size: 3.5rem

@media (max-width 1000px)
  h2
    font-size: 1.9rem
    width 90%
    text-align: center

@media (max-width 700px)
  .toolbar__content
  .toolbar__extension
    width 100%

@media (max-width 430px)
  .input-group label
    font-size: 0.9rem
    height 15px
    line-height: 15px
  .input-group
    padding 13px 0 0 0
    height 65px
  .input-group--select .input-group__selections__comma
    font-size: 0.9rem