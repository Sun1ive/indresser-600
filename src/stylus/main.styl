/** Stylus Styles */

@import '../../node_modules/vuetify/src/stylus/app'
@import './fonts'
@import './custom'


.application--light
  background-color #fff

.application > main
  flex-direction: column

.toolbar__content
.toolbar__extension
    display flex
    width 80%
    justify-content space-around

.navigation-drawer__border
  width 0

.application--light .navigation-drawer
  display: flex
  align-items: center
  justify-content: center
  box-shadow 3px 3px 3px #c0c0c0
  font-size: 1.2rem
  font-family: Gilroy-Light, Arial, Helvetica, sans-serif

.wrapper
  max-width 1732px
  margin-left auto !important
  width 100%
  .LC
    max-width: 1200px
    margin 0 auto !important

p
h2
h1
h3
  margin 0
