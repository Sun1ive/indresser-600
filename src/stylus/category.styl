.layout
  min-height 700px
  .flexWrapper
    width 80%
    margin 0 auto
    p
      width 60%
      margin 2rem 0

.carousel
  height 800px
  position relative
  .myButton
    position absolute
    top 50%
    left 50%
    z-index: 5
    transform translate(-50%,-50%)
    border-color #fff
    color #fff
  &__item
    transition 1.8s ease-in-out