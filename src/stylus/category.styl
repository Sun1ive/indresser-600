.layout
  min-height 700px
  .flexWrapper
    display flex
    justify-content: center
    align-items: center
    flex-direction: column
    min-height: 800px
    p
      width 60%
      margin 2rem 0
      font-size: responsive 1rem 1.4rem

.sliderBox
  position relative
  .myButton
    position absolute
    bottom 5%
    left 50%
    transform translate(-50%,-50%)
    border-color #fff
    color #fff
    &:hover
      border-color #000

.slider
  min-width: 400px
  min-height: 800px
  img
    width 100%

@media (max-width 700px)
  .layout
    flex-direction column
    .flexWrapper
      min-height: 600px
      p
        width 80%
  .slider
    min-height: 500px

@media (max-width 440px)
  .flexWrapper
    img
      width 90%