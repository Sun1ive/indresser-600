.layout
  min-height 700px
  .flexWrapper
    display flex
    justify-content: center
    align-items: center
    flex-direction: column
    min-height: 800px
    p
      width 60%
      margin 2rem 0
    img
      width 90%

.carousel
  height 800px
  position relative
  width 100%
  .myButton
    position absolute
    top 85%
    left 50%
    z-index: 5
    transform translate(-50%,-50%)
    border-color #fff
    color #fff
  &__item
    transition 1.8s ease-in-out

@media (max-width 700px)
  .layout
    flex-direction column
  .carousel
    width 670px
    height: 500px

@media (max-width 440px)
  .carousel
    width 50vh